<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="12dp"
    tools:context="com.technologkal.spyderApp.ui.activity.networkTools.NetworkMonitorConsoleFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:text="@string/networkconsole"
        android:gravity="center_vertical"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:textSize="15sp"
        android:layout_marginTop="8sp"/>


    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="592dp"
        android:layout_marginTop="10sp" />

    <Button
        android:id="@+id/launch_console_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:background="@drawable/btn_background"
        android:text="@string/launch_network_monitor"
        android:textColor="#000000" />

</LinearLayout>